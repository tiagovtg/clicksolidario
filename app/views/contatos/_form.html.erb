<%= javascript_include_tag 'jquery.meio.mask', 'script' %>
<script type="text/javascript">
  jQuery(document).ready(function(){
    jQuery(":input:not(:hidden):first").focus();
  });
</script>
<%= form_for(@contato) do |f| %>
  <% if @contato.errors.any? %>
    <div id="error_explanation">
      <ul>
        <% @contato.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

<div class="field">
    Assunto:&nbsp;&nbsp;
    <%= f.select(:assunto, ([["Elogio", "Elogio"], ["Sugestão", "Sugestão"], ["Reclamação", "Reclamação"],
          ["Outros","Outros"]]), :prompt => 'Selecione Assunto') %>
  </div>

  <div class="field"><br/>
    <%= f.text_field :nome, :placeholder=>"Seu nome..." %>
  </div>

  <div class="field"><br />
    <%= f.text_field :email, :placeholder=>"Email..." %>
  </div>

  <div class="field"><br />
    <%= f.text_field :telefone, :class=>'tel', :placeholder=>"Telefone..." %>
  </div>

  <div class="field"><br />
    <%= f.text_area :mensagem, :rows=> 10, :cols=> 60, :placeholder=>"Digite sua mensagem pra nos deixar aqui..." %>
  </div>

  <div class="actions">
    <br/>
    <%= f.submit('Enviar Contato') %>
  </div>
<% end %>
