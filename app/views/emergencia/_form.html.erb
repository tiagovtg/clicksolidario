<%= form_for(@emergencium, :html=>{:multipart=> true}) do |f| %>
  <%= render :partial => 'generals/model_errors', :locals => {:obj => @emergencium}%>

  <div class="field">
    <%= f.label :nome %><br />
    <%= f.text_field :nome %>
  </div>
  <div class="field">
    <%= f.label :desc %><br />
    <%= f.text_area :desc %>
  </div>
  <div class="field">
    <%= f.label :data %><br />
    <%= f.date_select :data %>
  </div>
  <div class="field">
    <%= f.label :status %><br />
    <%= f.text_field :status %>
  </div>
  <div class="field">
    <%= f.file_field :imagem %>
    <span class="description">Ex: Imagem.</span>
  </div>
  <% if administrador? %>
    <div class="field"><br/>
      <%= f.check_box :validacao %>
      <%= f.label :validacao, "Valida Emergencia." %><br/>
    </div><br/>
  <% end %>

  <div class="actions">
    <%= f.submit 'Salvar' %>
  </div>
<% end %>
