<script type="text/javascript">
  jQuery(document).ready(function(){
    jQuery(":input:not(:hidden):first").focus();
  });
</script>
<%= form_for(@entidade) do |f| %>
  <%= render :partial => 'generals/model_errors', :locals => {:obj => @entidade}%>

  <div class="field">
    <%= f.label :nomefantasia, "Nome Fantasia" %><br />
    <%= f.text_field :nomefantasia, :onkeypress=> 'return letrasNumeros(event)' %>
  </div>
  <div class="field">
    <%= f.label :razaosocial, "Razão Social" %><br />
    <%= f.text_field :razaosocial, :onkeypress=> 'return letrasNumeros(event)' %>
  </div>
  <div class="field">
    <%= f.label :cnpj, "Cnpj" %><br />
    <%= f.text_field :cnpj, :class=>"cnpj", :size=>"30" %>
  </div>
  <div class="field">
    <%= f.label :areaatuacao, "Area Atuação" %><br />
    <%= f.text_field :areaatuacao, :onkeypress=> 'return letrasNumeros(event)' %>
  </div>
  <div class="field">
    <%= f.label :causa_id %><br/>
    <%= collection_select(:entidade, :causa_id, Causa.all, :id, :nome, :prompt => 'Selecione uma causa') %>
  </div>
  <div class="field">
    <%= f.label :datafunda, "Data da Fundação" %><br />
    <%= f.date_select(:datafunda, :start_year => 1920, :end_year => 2050 ) %>
  </div>
  <div class="field">
    <%= f.label :site, "Site" %><br />
    <%= f.text_field :site %>
  </div>
  <div class="field">
    <%= f.label :siteproprio, "Site Proprio?" %><br />
    <%= f.radio_button(:siteproprio, "sim" ) %>&nbsp;Sim&nbsp;&nbsp;
    <%= f.radio_button(:siteproprio, "nao" ) %>&nbsp;Não&nbsp;&nbsp;
  </div>
  <% f.fields_for :telefones do |builder| %>
    <%= render 'generals/telefones', :f => builder %>
  <% end %>
  <div><br/><%= add_child_link "Adiciona Telefone", f, :telefones %><br/></div>
  <% f.fields_for :conta do |builder| %>
    <%= render 'generals/conta', :f => builder %>
  <% end %>
  <div><br/><%= add_child_link "Adiciona Conta", f, :conta %><br/></div>

  <hr/>
  <div class="field">
    <%= f.label :nome, "Nome" %><br />
    <%= f.text_field :nome, :size=>70, :maxlenght=>70, :onkeypress=> 'return SomenteLetras(event)' %>
  </div>
  <div class="field">
    <%= f.label :apelido, "Como gosta de ser chamado?" %><br />
    <%= f.text_field :apelido, :size=>30, :maxlenght=>30, :onkeypress=> 'return SomenteLetras(event)' %>
  </div>
  <div class="field">
    <%= f.label :datanasc, "Data Nascimento" %><br />
    <%= f.date_select(:datanasc, :start_year => 1920, :end_year => Time.now.year - 16, :order => [:day, :month, :year] ) %>
  </div>
  <div class="field">
    <%= f.label :cpf, "Cpf" %><br />
    <%= f.text_field :cpf, :class=>"cpf", :size=>"30" %>
  </div>
  <div class="field">
    <%= f.label :sexo, "Sexo" %><br />
    <%= f.radio_button(:sexo, value="Masculino" ) %>&nbsp;Masculino&nbsp;&nbsp;
    <%= f.radio_button(:sexo, value="Feminino" ) %>&nbsp;Feminino&nbsp;&nbsp;
  </div>

  <hr/>
  <div class="field">
    <%= f.label :cep, "Cep" %><br />
    <%= f.text_field :cep, :class=>"cep", :size=>"10" %>
  </div>
  <div class="field">
    <%= f.label :endereco, "Endereço" %><br />
    <%= f.text_field :endereco, :class=>"endereco", :size=>70, :maxlenght=>70, :onkeypress=> 'return letrasNumeros(event)' %>
  </div>
  <div class="field">
    <%= f.label :numero, "Numero" %><br />
    <%= f.text_field :numero, :size=>10, :maxlenght=>10 %>
  </div>
  <div class="field">
    <%= f.label :complemento, "Complemento" %><br />
    <%= f.text_field :complemento, :class=>"complemento" %>
  </div>
  <div class="field">
    <%= f.label :bairro, "Bairro" %><br />
    <%= f.text_field :bairro, :class=>"bairro" %>
  </div>
  <div class="field">
    <%= f.label :cidade, "Cidade" %><br />
    <%= f.text_field :cidade, :class=>"cidade", :size=>40, :maxlenght=>40, :onkeypress=> 'return SomenteLetras(event)' %>
  </div>
  <div class="field">
    <%= f.label :estado, "Estado" %><br />
    <%= f.select :estado, ([["Acre-AC", "AC"], ["Alagoas-AL", "AL"], ["Amapá-AP", "AP"],
        ["Amazonas-AM", "AM"], ["Bahia-BA", "BA"], ["Ceara-CE", "CE"], ["Distrito Federal-DF", "DF"], ["Espirito Santo-ES", "ES"],
        ["Goias-GO", "GO"], ["Maranhão-MA", "MA"], ["Mato Grosso-MT", "MT"], ["Mato Grosso do Sul-MS", "MS"], ["Minas Gerais-MG", "MG"],
        ["Para-PA", "PA"], ["Paraiba-PB", "PB"], ["Parana-PR", "PR"], ["Pernabuco-PE", "PE"], ["Piaui-PI", "PI"],
        ["Rio de Janeiro-RJ", "RJ"], ["Rio Grande do Norte-RN", "RN"], ["Rio Grande do Sul-RS", "RS"], ["Rondonia-RO", "RO"], ["Roraima-RR", "RR"],
        ["Santa Catarina-SC", "SC"], ["São Paulo-SP", "SP"], ["Sergipe-SE", "SE"], ["Tocantins-TO", "TO"]]), { :prompt => 'Escolha a região' } %>
  </div>
  <div class="field">
    <br/><span style="color:#ff0000;">* Campos de preenchimento obrigatorio!</span><br/>
  </div>

  <br/>
  <div id="resultado"></div>
  <div class="actions">
    <%= f.submit 'Salvar' %>
  </div>
  <br/>

    <!-- tabela envio inicio -->
  <table width="720" border="0" cellspacing="0" cellpadding="0">
    <tr>
      <td><input type="reset" name="limpar" value="" class="botaoLimpar" /></td>
      <td style=" width: 20px; "><img src="../images/dot.gif" width="20px" height="1" alt=""/></td>
      <td><input type="image" name="enviar" value="" class="botaoEnviar" /></td>
    </tr>
  </table>
  <!-- tabela envio fim -->
  <br/>
  <br/>
  <br/>
  <br/>
<% end %>
