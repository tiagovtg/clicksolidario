<%= form_for(@voluntario) do |f| %>
  <%= render :partial => 'generals/model_errors', :locals => {:obj => @voluntario}%>

  <div class="field">
    <%= f.label :nome, "Nome" %><br />
    <%= f.text_field :nome, :size=>70, :maxlenght=>70, :onkeypress=> 'return SomenteLetras(event)' %>
  </div>
  <div class="field">
    <%= f.label :apelido, "Como gosta de ser chamado?" %><br />
    <%= f.text_field :apelido, :size=>30, :maxlenght=>30, :onkeypress=> 'return SomenteLetras(event)' %>
  </div>
  <div class="field">
    <%= f.label :datanasc, "Data Nascimento" %><br />
    <%= f.date_select(:datanasc, :start_year => 1920, :end_year => Time.now.year - 16, :order => [:day, :month, :year] ) %>
  </div>
  <div class="field">
    <%= f.label :cpf, "Cpf" %><br />
    <%= f.text_field :cpf, :class=>"cpf", :size=>"30" %>
  </div>
  <div class="field">
    <%= f.label :sexo, "Sexo" %><br />
    <%= f.radio_button(:sexo, value="m" ) %>&nbsp;Masculino&nbsp;&nbsp;
    <%= f.radio_button(:sexo, value="f" ) %>&nbsp;Feminino&nbsp;&nbsp;
  </div>
  <% f.fields_for :telefones do |builder| %>
    <%= render 'generals/telefones', :f => builder %>
  <% end %>
  <div><br/><%= add_child_link "Adiciona Telefones", f, :telefones %><br/></div>
  <div class="field">
    <%= f.label :profissao, "Profissão" %><br />
    <%= f.text_field :profissao, :size=>70, :maxlenght=>70, :onkeypress=> 'return SomenteLetras(event)' %>
  </div>

  <hr/>
  <div class="field">
    <%= f.label :cep, "Cep" %><br />
    <%= f.text_field :cep, :class=>"cep", :size=>"10" %>
  </div>
  <div class="field">
    <%= f.label :endereco, "Endereço" %><br />
    <%= f.text_field :endereco, :size=>70, :maxlenght=>70, :onkeypress=> 'return letrasNumeros(event)' %>
  </div>
  <div class="field">
    <%= f.label :numero, "Numero" %><br />
    <%= f.text_field :numero, :size=>10, :maxlenght=>10 %>
  </div>
  <div class="field">
    <%= f.label :complemento, "Complemento" %><br />
    <%= f.text_field :complemento %>
  </div>
  <div class="field">
    <%= f.label :bairro, "Bairro" %><br />
    <%= f.text_field :bairro %>
  </div>
  <div class="field">
    <%= f.label :cidade, "Cidade" %><br />
    <%= f.text_field :cidade, :size=>40, :maxlenght=>40, :onkeypress=> 'return SomenteLetras(event)' %>
  </div>
  <div class="field">
    <%= f.label :estado, "Estado" %><br />
    <%= f.select :estado, ([["AC", "AC"], ["AL", "AL"], ["AP", "AP"],
        ["AM", "AM"], ["BA", "BA"], ["CE", "CE"], ["DF", "DF"], ["ES", "ES"],
        ["GO", "GO"], ["MA", "MA"], ["MT", "MT"], ["MS", "MS"], ["MG", "MG"],
        ["PA", "PA"], ["PB", "PB"], ["PR", "PR"], ["PE", "PE"], ["PI", "PI"],
        ["RJ", "RJ"], ["RN", "RN"], ["RS", "RS"], ["RO", "RO"], ["RR", "RR"],
        ["SC", "SC"], ["SP", "SP"], ["SE", "SE"], ["TO", "TO"]]) %>
  </div>
  <div class="field">
    <%= f.check_box :newsletter %>
    <%= f.label :newsletter, "Desejo receber notícias do Click Sólidario." %><br/>
  </div>
  <div class="field">
    <br/><span style="color:#ff0000;">* Campos de preenchimento obrigatorio!</span><br/>
  </div>

  <br/>
  <div class="actions">
    <%= f.submit 'Salvar' %>
  </div>
  <br/>
<% end %>


