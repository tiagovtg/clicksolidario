<%= form_for(@noticium) do |f| %>
  <%= render :partial => 'generals/model_errors', :locals => {:obj => @noticium}%>

  <div class="field">
    <%= f.label :titulo, 'Titulo' %><br />
    <%= f.text_field :titulo %>
  </div>
  <div class="field">
    <%= f.label :resumo, 'Resumo' %><br />
    <%= f.text_field :resumo %>
  </div>
  <div class="field">
    <%= f.label :noticia, 'Noticia' %><br />
    <%= f.text_area :noticia, :rows=>10 %>
  </div>
  <div class="field">
    <%= f.label :data %><br />
    <%= f.date_select :data %>
  </div>
  <% if administrador? %>
    <div class="field"><br/>
      <%= f.check_box :validacao %>
      <%= f.label :validacao, "Valida Noticia." %><br/>
    </div><br/>
  <% end %>

  <div class="actions">
    <%= f.submit 'Salvar' %>
  </div>
<% end %>
