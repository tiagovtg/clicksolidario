<% if @conteudo.nil? or @conteudo.empty? %>
  <p class="busca">
    Nenhum registro foi encontrado
  </p>
<% else %>
  <table width="778px" cellpadding="0" cellspacing="0" border="0" class="bordasimples">
    <tr>
      <th>Nome</th>
      <th>Cnpj</th>
      <th>Cidade</th>
      <th>Estado</th>
    </tr>

    <% @conteudo.each do |entidade| %>
      <tr class="<%= cycle("odd", "even") %>">
        <td><%= entidade.nomefantasia %></td>
        <td><%= entidade.cnpj %></td>
        <td><%= entidade.cidade %></td>
        <td><%= entidade.estado %></td>
      </tr>
    <% end %>
  </table>
<% end %>